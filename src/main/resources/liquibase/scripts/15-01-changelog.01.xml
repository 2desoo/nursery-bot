<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.27.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">
    <changeSet id="1721074173313-5" author="Vova">
        <createSequence incrementBy="50" sequenceName="travel_map_seq" startValue="1"/>
    </changeSet>
    <changeSet id="1721074173313-6" author="Vova">
        <createTable tableName="travel_map">
            <column name="id" type="BIGINT">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_travelmap"/>
            </column>
            <column name="file_path" type="VARCHAR(255)"/>
            <column name="file_size" type="BIGINT"/>
            <column name="media_type" type="VARCHAR(255)"/>
            <column name="picture" type="bytea"/>
            <column name="shelter_cat_id" type="BIGINT"/>
        </createTable>
    </changeSet>
    <changeSet id="1721074173313-8" author="Vova">
        <addForeignKeyConstraint baseColumnNames="shelter_cat_id" baseTableName="travel_map"
                                 constraintName="FK_TRAVELMAP_ON_SHELTERCAT" referencedColumnNames="id"
                                 referencedTableName="shelter_cat"/>
    </changeSet>
    <changeSet id="1721074173313-1" author="Vova">
        <dropNotNullConstraint columnDataType="bigint" columnName="chat_id" tableName="users"/>
    </changeSet>
    <changeSet id="1721074173313-2" author="Vova">
        <modifyDataType columnName="name" newDataType="VARCHAR(255)" tableName="users"/>
    </changeSet>
    <changeSet id="1721074173313-4" author="Vova">
        <addPrimaryKey columnNames="id" constraintName="pk_users" tableName="users"/>
    </changeSet>

</databaseChangeLog>